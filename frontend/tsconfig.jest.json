{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "types": ["jest", "@testing-library/jest-dom", "node"],
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "noEmit": true
  },
  "include": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "__tests__/**/*.ts",
    "__tests__/**/*.tsx"
  ]
}
